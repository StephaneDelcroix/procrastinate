    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:procrastinate"
    xmlns:pages="clr-namespace:procrastinate.Pages"
    Title="Procrastinator's Helper">

    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="Shell" ApplyToDerivedTypes="True">
                <Setter Property="Shell.BackgroundColor" Value="{StaticResource SurfaceBackground}"/>
                <Setter Property="Shell.ForegroundColor" Value="{StaticResource Gray100}"/>
                <Setter Property="Shell.TitleColor" Value="{StaticResource Gray100}"/>
                <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource CardBackground}"/>
                <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource Gray400}"/>
                <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource Gray400}"/>
                <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource Gray500}"/>
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

