<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:procrastinate.Resources.Strings"
             x:Class="procrastinate.Pages.Games.MinifigGeneratorGameView">
    <VerticalStackLayout Spacing="16">
        <!-- Minifigure Display with Images -->
        <Border BackgroundColor="{DynamicResource CardBackgroundAlt}" 
                StrokeShape="RoundRectangle 16" 
                Padding="20"
                HorizontalOptions="Center">
            <VerticalStackLayout Spacing="-10" HorizontalOptions="Center">
                <!-- Hair/Hat -->
                <Image x:Name="HairImage" 
                       Source="hair_flat.png" 
                       HeightRequest="50" 
                       WidthRequest="80"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"/>
                <!-- Head/Face -->
                <Image x:Name="HeadImage" 
                       Source="head_yellow.png" 
                       HeightRequest="60" 
                       WidthRequest="60"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"/>
                <!-- Torso -->
                <Image x:Name="TorsoImage" 
                       Source="torso_red_plain.png" 
                       HeightRequest="70" 
                       WidthRequest="90"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"/>
                <!-- Legs -->
                <Image x:Name="LegsImage" 
                       Source="legs_blue.png" 
                       HeightRequest="60" 
                       WidthRequest="70"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"/>
                <!-- Accessory text -->
                <Label x:Name="AccessoryLabel" Text="" FontSize="16" HorizontalOptions="Center" TextColor="{DynamicResource Tertiary}" Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </Border>
        
        <!-- Description -->
        <Label x:Name="DescriptionLabel" 
               Text="Tap to generate a random minifigure!" 
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center"
               FontSize="14" 
               TextColor="{DynamicResource Gray300}"/>
        
        <!-- Name -->
        <Label x:Name="NameLabel" 
               Text="" 
               HorizontalOptions="Center" 
               FontSize="18" 
               FontAttributes="Bold"
               TextColor="{DynamicResource Primary}"/>
        
        <Button x:Name="GenerateBtn" 
                Text="{Binding Generate, Source={x:Static strings:AppStrings.Instance}}"
                BackgroundColor="{DynamicResource Tertiary}" 
                TextColor="White"
                CornerRadius="12" 
                HeightRequest="44"
                Clicked="OnGenerateClicked"/>
    </VerticalStackLayout>
</ContentView>
