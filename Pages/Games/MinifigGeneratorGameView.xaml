<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:procrastinate.Resources.Strings"
             x:Class="procrastinate.Pages.Games.MinifigGeneratorGameView">
    <VerticalStackLayout Spacing="16">
        <!-- Minifigure Display -->
        <Border BackgroundColor="{DynamicResource CardBackgroundAlt}" 
                StrokeShape="RoundRectangle 16" 
                Padding="20"
                HorizontalOptions="Center">
            <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                <!-- Hair/Hat -->
                <Label x:Name="HairLabel" Text="^" FontSize="32" HorizontalOptions="Center" TextColor="{DynamicResource Gray200}"/>
                <!-- Face -->
                <Label x:Name="FaceLabel" Text=":)" FontSize="28" HorizontalOptions="Center" TextColor="#FBBF24"/>
                <!-- Torso -->
                <Grid ColumnDefinitions="20,40,20" HorizontalOptions="Center">
                    <Label x:Name="LeftArmLabel" Grid.Column="0" Text="/" FontSize="24" HorizontalOptions="End" TextColor="{DynamicResource Gray200}"/>
                    <Label x:Name="TorsoLabel" Grid.Column="1" Text="[  ]" FontSize="24" HorizontalOptions="Center"/>
                    <Label x:Name="RightArmLabel" Grid.Column="2" Text="\" FontSize="24" HorizontalOptions="Start" TextColor="{DynamicResource Gray200}"/>
                </Grid>
                <!-- Legs -->
                <Label x:Name="LegsLabel" Text="| |" FontSize="24" HorizontalOptions="Center"/>
                <!-- Accessory (held item) -->
                <Label x:Name="AccessoryLabel" Text="" FontSize="18" HorizontalOptions="Center" TextColor="{DynamicResource Tertiary}"/>
            </VerticalStackLayout>
        </Border>
        
        <!-- Description -->
        <Label x:Name="DescriptionLabel" 
               Text="Tap to generate a random minifigure!" 
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center"
               FontSize="14" 
               TextColor="{DynamicResource Gray300}"/>
        
        <!-- Name -->
        <Label x:Name="NameLabel" 
               Text="" 
               HorizontalOptions="Center" 
               FontSize="18" 
               FontAttributes="Bold"
               TextColor="{DynamicResource Primary}"/>
        
        <Button x:Name="GenerateBtn" 
                Text="{Binding Generate, Source={x:Static strings:AppStrings.Instance}}"
                BackgroundColor="{DynamicResource Tertiary}" 
                TextColor="White"
                CornerRadius="12" 
                HeightRequest="44"
                Clicked="OnGenerateClicked"/>
    </VerticalStackLayout>
</ContentView>
