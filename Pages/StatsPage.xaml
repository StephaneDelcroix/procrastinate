<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:procrastinate.Resources.Strings"
             x:Class="procrastinate.Pages.StatsPage"
             Title="{Binding YourStats, Source={x:Static strings:AppStrings.Instance}}"
             BackgroundColor="{StaticResource SurfaceBackground}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto">
            <Label Text="{Binding YourStats, Source={x:Static strings:AppStrings.Instance}}" 
                   FontSize="18" FontAttributes="Bold" 
                   TextColor="{StaticResource Gray100}"
                   VerticalOptions="Center"/>
            <Button Grid.Column="1" Text="&#xf013;" 
                    FontFamily="FontAwesomeSolid"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Gray300}"
                    FontSize="20"
                    Clicked="OnSettingsClicked"
                    VerticalOptions="Center"/>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="&#xf201;" 
                   FontFamily="FontAwesomeSolid"
                   FontSize="48" 
                   TextColor="{StaticResource AccentLight}"
                   HorizontalOptions="Center"/>
            <Label Text="{Binding YourStats, Source={x:Static strings:AppStrings.Instance}}" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource AccentLight}"
                   HorizontalOptions="Center"/>
            
            <Label Text="{Binding BeProud, Source={x:Static strings:AppStrings.Instance}}"
                   FontSize="14"
                   TextColor="{StaticResource Gray400}"
                   HorizontalOptions="Center"/>

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                <Border BackgroundColor="{StaticResource CardBackground}" 
                        StrokeShape="RoundRectangle 16" Stroke="Transparent" Padding="20"
                        Grid.Row="0" Grid.Column="0">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="&#xf05e;" FontFamily="FontAwesomeSolid" FontSize="28" TextColor="{StaticResource Primary}"/>
                        <Label Text="{Binding TasksAvoided, Source={x:Static strings:AppStrings.Instance}}" FontSize="12" TextColor="{StaticResource Gray400}"/>
                        <Label x:Name="TasksAvoidedLabel" Text="0" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="{StaticResource CardBackground}" 
                        StrokeShape="RoundRectangle 16" Stroke="Transparent" Padding="20"
                        Grid.Row="0" Grid.Column="1">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="&#xf0f4;" FontFamily="FontAwesomeSolid" FontSize="28" TextColor="{StaticResource Secondary}"/>
                        <Label Text="{Binding BreaksTaken, Source={x:Static strings:AppStrings.Instance}}" FontSize="12" TextColor="{StaticResource Gray400}"/>
                        <Label x:Name="BreaksTakenLabel" Text="0" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource Secondary}"/>
                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="{StaticResource CardBackground}" 
                        StrokeShape="RoundRectangle 16" Stroke="Transparent" Padding="20"
                        Grid.Row="1" Grid.Column="0">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="&#xf630;" FontFamily="FontAwesomeSolid" FontSize="28" TextColor="{StaticResource Tertiary}"/>
                        <Label Text="{Binding ExcusesGeneratedStat, Source={x:Static strings:AppStrings.Instance}}" FontSize="12" TextColor="{StaticResource Gray400}"/>
                        <Label x:Name="ExcusesLabel" Text="0" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource Tertiary}"/>
                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="{StaticResource CardBackground}" 
                        StrokeShape="RoundRectangle 16" Stroke="Transparent" Padding="20"
                        Grid.Row="1" Grid.Column="1">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="&#xf11b;" FontFamily="FontAwesomeSolid" FontSize="28" TextColor="{StaticResource AccentLight}"/>
                        <Label Text="{Binding GamesPlayed, Source={x:Static strings:AppStrings.Instance}}" FontSize="12" TextColor="{StaticResource Gray400}"/>
                        <Label x:Name="GamesPlayedLabel" Text="0" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource AccentLight}"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <Border BackgroundColor="#2D1F3D" 
                    StrokeShape="RoundRectangle 16" 
                    Stroke="{StaticResource Tertiary}"
                    StrokeThickness="1"
                    Padding="20">
                <HorizontalStackLayout Spacing="16">
                    <Label Text="&#xf091;" FontFamily="FontAwesomeSolid" FontSize="36" TextColor="{StaticResource Warm}" VerticalOptions="Center"/>
                    <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                        <Label Text="{Binding AchievementUnlocked, Source={x:Static strings:AppStrings.Instance}}" FontSize="14" FontAttributes="Bold" TextColor="{StaticResource Warm}"/>
                        <Label x:Name="AchievementLabel" 
                               Text="Loading achievement..."
                               FontSize="14"
                               TextColor="{StaticResource Gray300}"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
