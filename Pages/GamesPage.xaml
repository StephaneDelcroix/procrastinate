<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="procrastinate.Pages.GamesPage"
             Title="Mini-Games"
             BackgroundColor="{StaticResource SurfaceBackground}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto">
            <Label x:Name="NavTitleLabel"
                   Text="Mini-Games" 
                   FontSize="18" FontAttributes="Bold" 
                   TextColor="{StaticResource Gray100}"
                   VerticalOptions="Center"/>
            <Button Grid.Column="1" Text="&#xf013;" 
                    FontFamily="FontAwesomeSolid"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Gray300}"
                    FontSize="20"
                    Clicked="OnSettingsClicked"
                    VerticalOptions="Center"/>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">
            <Label Text="&#xf11b;" 
                   FontFamily="FontAwesomeSolid"
                   FontSize="48" 
                   TextColor="{StaticResource Secondary}"
                   HorizontalOptions="Center"/>
            <Label x:Name="TitleLabel"
                   Text="Mini-Games" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource Secondary}"
                   HorizontalOptions="Center"/>
            
            <Label x:Name="SubtitleLabel"
                   Text="Because productivity is overrated!"
                   FontSize="14"
                   TextColor="{StaticResource Gray400}"
                   HorizontalOptions="Center"/>

            <Button x:Name="ShuffleBtn" 
                    Text="&#xf074;  Shuffle Games"
                    FontSize="16"
                    BackgroundColor="{StaticResource CardBackgroundAlt}"
                    TextColor="{StaticResource Gray200}"
                    CornerRadius="12"
                    HeightRequest="44"
                    Clicked="OnShuffleClicked"/>

            <VerticalStackLayout x:Name="GamesContainer" Spacing="20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
