<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="procrastinate.Pages.ExcusePage"
             Title="Excuse Generator"
             BackgroundColor="{StaticResource SurfaceBackground}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto">
            <Label Text="Excuse Generator" 
                   FontSize="18" FontAttributes="Bold" 
                   TextColor="{StaticResource Gray100}"
                   VerticalOptions="Center"/>
            <Button Grid.Column="1" Text="&#xf013;" 
                    FontFamily="FontAwesomeSolid"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Gray300}"
                    FontSize="20"
                    Clicked="OnSettingsClicked"
                    VerticalOptions="Center"/>
        </Grid>
    </Shell.TitleView>

    <VerticalStackLayout Padding="24" Spacing="24" VerticalOptions="Center">
        <Label Text="&#xf630;" 
               FontFamily="FontAwesomeSolid"
               FontSize="48" 
               TextColor="{StaticResource Tertiary}"
               HorizontalOptions="Center"/>
        <Label Text="Excuse Generator" 
               FontSize="28" 
               FontAttributes="Bold"
               TextColor="{StaticResource Tertiary}"
               HorizontalOptions="Center"/>
        
        <Label Text="Need a reason to not do something? We got you!"
               FontSize="14"
               TextColor="{StaticResource Gray400}"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"/>
        
        <Border BackgroundColor="{StaticResource CardBackground}" 
                StrokeShape="RoundRectangle 20"
                Stroke="Transparent"
                Padding="28"
                MinimumHeightRequest="140">
            <Border.Shadow>
                <Shadow Brush="#40000000" Offset="0,4" Radius="12" Opacity="0.3"/>
            </Border.Shadow>
            <Label x:Name="ExcuseLabel"
                   Text="Tap the button for a fresh excuse!"
                   FontSize="18"
                   TextColor="{StaticResource Gray200}"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"/>
        </Border>
        
        <Button x:Name="GenerateBtn"
                FontSize="18"
                HeightRequest="56"
                BackgroundColor="{StaticResource Tertiary}"
                TextColor="White"
                CornerRadius="14"
                Clicked="OnGenerateClicked">
            <Button.ContentLayout>
                <ButtonContentLayout Position="Left" Spacing="10"/>
            </Button.ContentLayout>
            <Button.ImageSource>
                <FontImageSource Glyph="&#xf522;" FontFamily="FontAwesomeSolid" Color="White" Size="18"/>
            </Button.ImageSource>
            <Button.Text>Generate Excuse</Button.Text>
        </Button>
        
        <Button x:Name="CopyBtn"
                BackgroundColor="{StaticResource CardBackgroundAlt}"
                TextColor="{StaticResource Gray200}"
                HeightRequest="48"
                CornerRadius="12"
                Clicked="OnCopyClicked">
            <Button.ContentLayout>
                <ButtonContentLayout Position="Left" Spacing="10"/>
            </Button.ContentLayout>
            <Button.ImageSource>
                <FontImageSource Glyph="&#xf0c5;" FontFamily="FontAwesomeSolid" Color="{StaticResource Gray300}" Size="16"/>
            </Button.ImageSource>
            <Button.Text>Copy to Clipboard</Button.Text>
        </Button>
        
        <Label x:Name="CounterLabel"
               Text="Excuses generated today: 0"
               FontSize="13"
               TextColor="{StaticResource Gray500}"
               HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
