<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:procrastinate.Resources.Strings"
             x:Class="procrastinate.Pages.SettingsPage"
             Title="{Binding Settings, Source={x:Static strings:AppStrings.Instance}}"
             BackgroundColor="{DynamicResource SurfaceBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">
            <Label Text="&#xf013;" 
                   FontFamily="FontAwesomeSolid"
                   FontSize="48" 
                   TextColor="{DynamicResource Gray300}"
                   HorizontalOptions="Center"/>
            <Label Text="{Binding Settings, Source={x:Static strings:AppStrings.Instance}}" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="{DynamicResource Gray100}"
                   HorizontalOptions="Center"/>

            <!-- Language -->
            <Border BackgroundColor="{DynamicResource CardBackground}" 
                    StrokeShape="RoundRectangle 16"
                    Stroke="Transparent"
                    Padding="20">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="&#xf1ab;" FontFamily="FontAwesomeSolid" FontSize="18" TextColor="{DynamicResource Primary}" VerticalOptions="Center"/>
                        <Label Text="{Binding Language, Source={x:Static strings:AppStrings.Instance}}" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Gray200}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    
                    <Picker x:Name="LanguagePicker"
                            TextColor="{DynamicResource Gray100}"
                            BackgroundColor="{DynamicResource CardBackgroundAlt}"
                            SelectedIndexChanged="OnLanguageChanged"/>
                </VerticalStackLayout>
            </Border>

            <!-- Accessibility -->
            <Border BackgroundColor="{DynamicResource CardBackground}" 
                    StrokeShape="RoundRectangle 16"
                    Stroke="Transparent"
                    Padding="20">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="&#xf29a;" FontFamily="FontAwesomeSolid" FontSize="18" TextColor="{DynamicResource Secondary}" VerticalOptions="Center"/>
                        <Label Text="{Binding Accessibility, Source={x:Static strings:AppStrings.Instance}}" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Gray200}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="{Binding HighContrastMode, Source={x:Static strings:AppStrings.Instance}}" 
                                   FontSize="16" 
                                   TextColor="{DynamicResource Gray100}"/>
                            <Label Text="{Binding HighContrastDesc, Source={x:Static strings:AppStrings.Instance}}" 
                                   FontSize="13" 
                                   TextColor="{DynamicResource Gray400}"/>
                        </VerticalStackLayout>
                        <Switch x:Name="HighContrastSwitch" 
                                Grid.Column="1"
                                OnColor="{DynamicResource Primary}"
                                Toggled="OnHighContrastToggled"
                                VerticalOptions="Center"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="{Binding ZalgoMode, Source={x:Static strings:AppStrings.Instance}}" 
                                   FontSize="16" 
                                   TextColor="{DynamicResource Gray100}"/>
                            <Label Text="{Binding ZalgoModeDesc, Source={x:Static strings:AppStrings.Instance}}" 
                                   FontSize="13" 
                                   TextColor="{DynamicResource Gray400}"/>
                        </VerticalStackLayout>
                        <Switch x:Name="ZalgoSwitch" 
                                Grid.Column="1"
                                OnColor="{DynamicResource Tertiary}"
                                Toggled="OnZalgoToggled"
                                VerticalOptions="Center"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- Excuse Engine -->
            <Border BackgroundColor="{DynamicResource CardBackground}" 
                    StrokeShape="RoundRectangle 16"
                    Stroke="Transparent"
                    Padding="20">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="&#xf075;" FontFamily="FontAwesomeSolid" FontSize="18" TextColor="{DynamicResource Primary}" VerticalOptions="Center"/>
                        <Label Text="{Binding ExcuseEngine, Source={x:Static strings:AppStrings.Instance}}" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Gray200}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <Label Text="{Binding ExcuseEngineDesc, Source={x:Static strings:AppStrings.Instance}}" 
                           FontSize="13" 
                           TextColor="{DynamicResource Gray400}"/>
                    
                    <Picker x:Name="ExcuseModePicker"
                            TextColor="{DynamicResource Gray100}"
                            BackgroundColor="{DynamicResource CardBackgroundAlt}"
                            SelectedIndexChanged="OnExcuseModeChanged"/>

                    <VerticalStackLayout x:Name="CloudSettingsPanel" Spacing="12" IsVisible="False">
                        <Entry x:Name="ApiEndpointEntry"
                               Placeholder="{Binding ApiEndpointPlaceholder, Source={x:Static strings:AppStrings.Instance}}"
                               TextColor="{DynamicResource Gray100}"
                               PlaceholderColor="{DynamicResource Gray400}"
                               BackgroundColor="{DynamicResource CardBackgroundAlt}"
                               TextChanged="OnApiEndpointChanged"/>
                        
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="{Binding AiModel, Source={x:Static strings:AppStrings.Instance}}" 
                                   FontSize="14" 
                                   TextColor="{DynamicResource Gray300}"
                                   VerticalOptions="Center"/>
                            <Entry x:Name="AiModelEntry"
                                   Text="llama3.2"
                                   WidthRequest="150"
                                   TextColor="{DynamicResource Gray100}"
                                   BackgroundColor="{DynamicResource CardBackgroundAlt}"
                                   TextChanged="OnAiModelChanged"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Theme Preview -->
            <Border BackgroundColor="{DynamicResource CardBackground}" 
                    StrokeShape="RoundRectangle 16"
                    Stroke="Transparent"
                    Padding="20">
                <VerticalStackLayout Spacing="16">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="&#xf53f;" FontFamily="FontAwesomeSolid" FontSize="18" TextColor="{DynamicResource Tertiary}" VerticalOptions="Center"/>
                        <Label Text="{Binding ThemePreview, Source={x:Static strings:AppStrings.Instance}}" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Gray200}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Border x:Name="PreviewPrimary" 
                                BackgroundColor="{DynamicResource Primary}"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Transparent"
                                WidthRequest="50" HeightRequest="50"/>
                        <Border x:Name="PreviewSecondary" 
                                BackgroundColor="{DynamicResource Secondary}"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Transparent"
                                WidthRequest="50" HeightRequest="50"/>
                        <Border x:Name="PreviewTertiary" 
                                BackgroundColor="{DynamicResource Tertiary}"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Transparent"
                                WidthRequest="50" HeightRequest="50"/>
                        <Border x:Name="PreviewAccent" 
                                BackgroundColor="{DynamicResource AccentLight}"
                                StrokeShape="RoundRectangle 8"
                                Stroke="Transparent"
                                WidthRequest="50" HeightRequest="50"/>
                    </HorizontalStackLayout>
                    
                    <Label x:Name="ThemeLabel"
                           Text="Current: Default Theme"
                           FontSize="14"
                           TextColor="{DynamicResource Gray400}"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

            <Label Text="{Binding ChangesApply, Source={x:Static strings:AppStrings.Instance}}"
                   FontSize="13"
                   TextColor="{DynamicResource Gray500}"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
