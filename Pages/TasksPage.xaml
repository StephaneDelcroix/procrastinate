<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="procrastinate.Pages.TasksPage"
             Title="Today's Tasks"
             BackgroundColor="{StaticResource SurfaceBackground}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto">
            <Label x:Name="NavTitleLabel"
                   Text="Today's Tasks" 
                   FontSize="18" FontAttributes="Bold" 
                   TextColor="{StaticResource Gray100}"
                   VerticalOptions="Center"/>
            <Button Grid.Column="1" Text="&#xf013;" 
                    FontFamily="FontAwesomeSolid"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Gray300}"
                    FontSize="20"
                    Clicked="OnSettingsClicked"
                    VerticalOptions="Center"/>
        </Grid>
    </Shell.TitleView>

    <VerticalStackLayout Padding="24" Spacing="24" VerticalOptions="Center">
        <Label Text="&#xf46d;" 
               FontFamily="FontAwesomeSolid"
               FontSize="48" 
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center"/>
        <Label x:Name="TitleLabel"
               Text="Today's Tasks" 
               FontSize="28" 
               FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center"/>
        
        <Border BackgroundColor="{StaticResource CardBackground}" 
                StrokeShape="RoundRectangle 16"
                Stroke="Transparent"
                Padding="24">
            <Border.Shadow>
                <Shadow Brush="#40000000" Offset="0,4" Radius="12" Opacity="0.3"/>
            </Border.Shadow>
            <VerticalStackLayout Spacing="16">
                <Label x:Name="ProductivityListLabel"
                       Text="Your productivity list:" 
                       FontSize="14" 
                       TextColor="{StaticResource Gray400}"/>
                
                <Border BackgroundColor="{StaticResource CardBackgroundAlt}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="Transparent"
                        Padding="16">
                    <HorizontalStackLayout Spacing="12">
                        <CheckBox x:Name="TaskCheckBox" 
                                  Color="{StaticResource Primary}"
                                  CheckedChanged="OnTaskChecked"/>
                        <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                            <Label Text="&#xf0f4;" 
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="18" 
                                   TextColor="{StaticResource Gray300}"
                                   VerticalOptions="Center"/>
                            <Label x:Name="TakeBreakLabel"
                                   Text="Take a break" 
                                   FontSize="18" 
                                   TextColor="{StaticResource Gray100}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </HorizontalStackLayout>
                </Border>
            </VerticalStackLayout>
        </Border>
        
        <Label x:Name="MotivationLabel"
               Text="You're doing great! Only 1 task today!"
               FontSize="14"
               TextColor="{StaticResource Gray400}"
               HorizontalOptions="Center"/>
        
        <Button x:Name="AddTaskBtn"
                Clicked="OnAddTaskClicked"
                BackgroundColor="{StaticResource CardBackgroundAlt}"
                TextColor="{StaticResource Gray200}"
                FontSize="16"
                HeightRequest="50"
                CornerRadius="12"
                Text="Add More Tasks">
            <Button.ImageSource>
                <FontImageSource Glyph="&#xf067;" FontFamily="FontAwesomeSolid" Color="{StaticResource Gray300}" Size="16"/>
            </Button.ImageSource>
        </Button>
    </VerticalStackLayout>
</ContentPage>
