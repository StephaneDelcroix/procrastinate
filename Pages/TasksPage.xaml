<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="procrastinate.Pages.TasksPage"
             Title="Today's Tasks"
             BackgroundColor="{StaticResource SurfaceBackground}">

    <VerticalStackLayout Padding="24" Spacing="24" VerticalOptions="Center">
        <Label Text="ðŸ“‹" 
               FontSize="48" 
               HorizontalOptions="Center"/>
        <Label Text="Today's Tasks" 
               FontSize="28" 
               FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center"/>
        
        <Border BackgroundColor="{StaticResource CardBackground}" 
                StrokeShape="RoundRectangle 16"
                Stroke="Transparent"
                Padding="24">
            <Border.Shadow>
                <Shadow Brush="#40000000" Offset="0,4" Radius="12" Opacity="0.3"/>
            </Border.Shadow>
            <VerticalStackLayout Spacing="16">
                <Label Text="Your productivity list:" 
                       FontSize="14" 
                       TextColor="{StaticResource Gray400}"/>
                
                <Border BackgroundColor="{StaticResource CardBackgroundAlt}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="Transparent"
                        Padding="16">
                    <HorizontalStackLayout Spacing="12">
                        <CheckBox x:Name="TaskCheckBox" 
                                  Color="{StaticResource Primary}"
                                  CheckedChanged="OnTaskChecked"/>
                        <Label Text="â˜• Take a break" 
                               FontSize="18" 
                               TextColor="{StaticResource Gray100}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </VerticalStackLayout>
        </Border>
        
        <Label x:Name="MotivationLabel"
               Text="You're doing great! Only 1 task today!"
               FontSize="14"
               TextColor="{StaticResource Gray400}"
               HorizontalOptions="Center"/>
        
        <Button x:Name="AddTaskBtn"
                Text="âž• Add More Tasks"
                Clicked="OnAddTaskClicked"
                BackgroundColor="{StaticResource CardBackgroundAlt}"
                TextColor="{StaticResource Gray200}"
                FontSize="16"
                HeightRequest="50"
                CornerRadius="12"/>
    </VerticalStackLayout>
</ContentPage>
