<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:procrastinate.Resources.Strings"
             x:Class="procrastinate.Pages.TasksPage"
             Title="{Binding TodaysTasks, Source={x:Static strings:AppStrings.Instance}}"
             BackgroundColor="{DynamicResource SurfaceBackground}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto">
            <Label Text="{Binding TodaysTasks, Source={x:Static strings:AppStrings.Instance}}" 
                   FontSize="18" FontAttributes="Bold" 
                   TextColor="{DynamicResource Gray100}"
                   VerticalOptions="Center"/>
            <Button Grid.Column="1" Text="&#xf013;" 
                    FontFamily="FontAwesomeSolid"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource Gray300}"
                    FontSize="20"
                    Clicked="OnSettingsClicked"
                    VerticalOptions="Center"/>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
    <VerticalStackLayout Padding="24" Spacing="24" VerticalOptions="Start">
        <Label Text="&#xf46d;" 
               FontFamily="FontAwesomeSolid"
               FontSize="48" 
               TextColor="{DynamicResource Primary}"
               HorizontalOptions="Center"/>
        <Label Text="{Binding TodaysTasks, Source={x:Static strings:AppStrings.Instance}}" 
               FontSize="28" 
               FontAttributes="Bold"
               TextColor="{DynamicResource Primary}"
               HorizontalOptions="Center"/>
        
        <Border BackgroundColor="{DynamicResource CardBackground}" 
                StrokeShape="RoundRectangle 16"
                Stroke="Transparent"
                Padding="24">
            <Border.Shadow>
                <Shadow Brush="#40000000" Offset="0,4" Radius="12" Opacity="0.3"/>
            </Border.Shadow>
            <VerticalStackLayout Spacing="16">
                <Label Text="{Binding YourProductivityList, Source={x:Static strings:AppStrings.Instance}}" 
                       FontSize="14" 
                       TextColor="{DynamicResource Gray400}"/>
                
                <Border BackgroundColor="{DynamicResource CardBackgroundAlt}"
                        StrokeShape="RoundRectangle 12"
                        Stroke="Transparent"
                        Padding="16">
                    <HorizontalStackLayout Spacing="12">
                        <CheckBox x:Name="TaskCheckBox" 
                                  Color="{DynamicResource Primary}"
                                  CheckedChanged="OnTaskChecked"/>
                        <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                            <Label Text="&#xf0f4;" 
                                   FontFamily="FontAwesomeSolid"
                                   FontSize="18" 
                                   TextColor="{DynamicResource Gray300}"
                                   VerticalOptions="Center"/>
                            <Label Text="{Binding TakeABreak, Source={x:Static strings:AppStrings.Instance}}" 
                                   FontSize="18" 
                                   TextColor="{DynamicResource Gray100}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </HorizontalStackLayout>
                </Border>
            </VerticalStackLayout>
        </Border>
        
        <Label x:Name="MotivationLabel"
               Text="{Binding DoingGreat, Source={x:Static strings:AppStrings.Instance}}"
               FontSize="14"
               TextColor="{DynamicResource Gray400}"
               HorizontalOptions="Center"/>
        
        <Button x:Name="AddTaskBtn"
                Clicked="OnAddTaskClicked"
                BackgroundColor="{DynamicResource CardBackgroundAlt}"
                TextColor="{DynamicResource Gray200}"
                FontSize="16"
                HeightRequest="50"
                CornerRadius="12"
                Text="{Binding AddMoreTasks, Source={x:Static strings:AppStrings.Instance}}">
            <Button.ImageSource>
                <FontImageSource Glyph="&#xf067;" FontFamily="FontAwesomeSolid" Color="{DynamicResource Gray300}" Size="16"/>
            </Button.ImageSource>
        </Button>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>
